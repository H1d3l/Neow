<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.company_hidel.hemoapp">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_hemo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        >
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddDoadorActivity"
            android:label="@string/add_doador"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AddHospitalActivity"
            android:label="@string/add_hospital"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DoacaoActivity"
            android:label="@string/Fomulario_de_Doacao"></activity>
        <activity android:name=".ListaDoadoresActivity"></activity>
    </application>

</manifest>